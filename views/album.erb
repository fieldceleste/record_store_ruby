<h4>Album Name: <%= @album.name %></h4>


<h3>Album Songs</h3>

  <% if @album.songs %>
    <ul>
    <% @album.songs.each do |song| %>
    <li><%= song.name %>
    </li>
    <% end %>
  </ul>
  <% else %>
    <p>There are no songs listed for this album yet.</p>
  <% end %>

<h4>Add a song:</h4>  

<form action="/albums/<%= @album.id %>/songs" method="post">
  <div class="form-group">
    <label for="song_name">Song name</label>
    <input id="song_name" name="song_name" class="form-control" type="text">
    
  </div>
  <button type="submit" class="btn">Add song</button>
</form>

<%# ///------Returns to album list-----> %>
<p><a href="/albums/<%= @album.id %>/edit">Edit album</a></p>
<p><a href="/albums">Return to album list</a></p>

<%# <///---Buy an album Button--------> %>
<form action="/albums/<%= @album.id() %>" method="get">
  <input name="_method" type="hidden" value="sold">
  <button type="submit" class="btn-default">Buy an album</button>
</form>
    